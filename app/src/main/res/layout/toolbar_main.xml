<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/app_bar"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/color_ffffff"
  app:elevation="0dp">


    <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      style="@style/ToolBarPrimary"
      android:layout_width="match_parent"
      android:layout_height="?android:attr/actionBarSize"
      app:titleTextAppearance="@style/ToolbarTitleText">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"

        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="30dp"
          android:layout_height="wrap_content">

      <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/message_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:src="@drawable/head_btn_message"
        android:stateListAnimator="@null" />
        <com.github.florent37.shapeofview.shapes.RoundRectView
          android:layout_width="15dp"
          android:layout_height="15dp"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:shape_roundRect_bottomRightRadius="7.5dp"
          app:shape_roundRect_topRightRadius="7.5dp"
          app:shape_roundRect_topLeftRadius="7.5dp"
          app:shape_roundRect_bottomLeftRadius="7.5dp">

          <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/new_memo_count_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="15"
            android:background="#EDB937"
            android:textSize="10dp"
            android:textColor="@color/color_ffffff"
            android:fontFamily="@font/notosansbold"
            android:gravity="center"/>

        </com.github.florent37.shapeofview.shapes.RoundRectView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="20dp"
          android:layout_marginLeft="20dp">

          <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/alarm_button"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:minHeight="0dp"
            android:src="@drawable/head_btn_alarm"
            android:stateListAnimator="@null" />

          <com.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_roundRect_bottomRightRadius="7.5dp"
            app:shape_roundRect_topRightRadius="7.5dp"
            app:shape_roundRect_topLeftRadius="7.5dp"
            app:shape_roundRect_bottomLeftRadius="7.5dp">

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/new_alarm_count_text_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="15"
              android:background="#EDB937"
              android:textSize="10dp"
              android:textColor="@color/color_ffffff"
              android:fontFamily="@font/notosansbold"
              android:gravity="center"/>
          </com.github.florent37.shapeofview.shapes.RoundRectView>

        </androidx.constraintlayout.widget.ConstraintLayout>

      </LinearLayout>


    </androidx.appcompat.widget.Toolbar>


</com.google.android.material.appbar.AppBarLayout>