<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <include layout="@layout/toolbar_back" />

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/button_layout">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="30dp"
          android:layout_marginRight="20dp"
          android:fontFamily="@font/notosansbold"
          android:text="찾고자 하는 산책친구 조건을"
          android:textColor="@color/color_000000"
          android:textSize="22dp" />

        <androidx.appcompat.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="3dp"
          android:layout_marginRight="20dp"
          android:fontFamily="@font/notosansbold"
          android:text="저장 할 수 있습니다."
          android:textColor="@color/color_000000"
          android:textSize="22dp" />

        <androidx.appcompat.widget.AppCompatCheckBox
          android:id="@+id/all_pet"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="30dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:buttonTint="@color/selector_checkbox"
          android:fontFamily="@font/notosansregular"
          android:minHeight="0dp"
          android:text="모두 상관없어요."
          android:textColor="@color/color_000000"
          android:textSize="14dp" />



        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="11dp"
          android:layout_marginRight="20dp">


          <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosansregular"
                android:text="견종"
                android:textColor="@color/color_000000"
                android:textSize="14dp" />

              <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosansregular"
                android:text="*"
                android:layout_marginLeft="4dp"
                android:textColor="@color/colorAccent"
                android:textSize="14dp" />
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/search_pet_text_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:fontFamily="@font/notosansregular"
              android:gravity="center_vertical"
              android:text="견종찾기"
              android:textColor="@color/colorAccent"
              android:textSize="14dp" />

          </RelativeLayout>


        </LinearLayout>

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="30dp"
          android:orientation="horizontal">

          <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosansregular"
            android:text="성별"
            android:textColor="@color/color_000000"
            android:textSize="14dp" />

          <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosansregular"
            android:text="*"
            android:layout_marginLeft="4dp"
            android:textColor="@color/colorAccent"
            android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="20dp"
          android:orientation="horizontal">

          <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/pet_male_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            app:shape_roundRect_borderColor="@color/color_EAE8E5"
            app:shape_roundRect_borderWidth="1dp"
            app:shape_roundRect_bottomLeftRadius="@dimen/dp_10"
            app:shape_roundRect_bottomRightRadius="@dimen/dp_10"
            app:shape_roundRect_topLeftRadius="@dimen/dp_10"
            app:shape_roundRect_topRightRadius="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_gravity="center"
              android:background="@color/clear"
              android:gravity="center"
              android:text="남아"
              android:textColor="@color/color_000000" />

          </com.github.florent37.shapeofview.shapes.RoundRectView>

          <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/pet_female_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:shape_roundRect_borderColor="@color/color_EAE8E5"
            app:shape_roundRect_borderWidth="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:shape_roundRect_bottomLeftRadius="@dimen/dp_10"
            app:shape_roundRect_bottomRightRadius="@dimen/dp_10"
            app:shape_roundRect_topLeftRadius="@dimen/dp_10"
            app:shape_roundRect_topRightRadius="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_gravity="center"
              android:background="@color/clear"
              android:gravity="center"
              android:text="여아"
              android:textColor="@color/color_000000" />

          </com.github.florent37.shapeofview.shapes.RoundRectView>

          <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/gender_no_problem"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:shape_roundRect_borderColor="@color/color_EAE8E5"
            app:shape_roundRect_borderWidth="1dp"
            app:shape_roundRect_bottomLeftRadius="@dimen/dp_10"
            app:shape_roundRect_bottomRightRadius="@dimen/dp_10"
            android:layout_marginLeft="5dp"
            app:shape_roundRect_topLeftRadius="@dimen/dp_10"
            app:shape_roundRect_topRightRadius="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_gravity="center"
              android:background="@color/clear"
              android:gravity="center"
              android:text="상관없음"
              android:textColor="@color/color_000000" />

          </com.github.florent37.shapeofview.shapes.RoundRectView>
        </LinearLayout>

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="30dp"
          android:orientation="horizontal">

          <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosansregular"
            android:text="중성화"
            android:textColor="@color/color_000000"
            android:textSize="14dp" />

          <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosansregular"
            android:text="*"
            android:layout_marginLeft="4dp"
            android:textColor="@color/colorAccent"
            android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="20dp"
          android:orientation="horizontal">

          <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/pet_trans_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            app:shape_roundRect_borderColor="@color/color_EAE8E5"
            app:shape_roundRect_borderWidth="1dp"
            app:shape_roundRect_bottomLeftRadius="@dimen/dp_10"
            app:shape_roundRect_bottomRightRadius="@dimen/dp_10"
            app:shape_roundRect_topLeftRadius="@dimen/dp_10"
            app:shape_roundRect_topRightRadius="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_gravity="center"
              android:background="@color/clear"
              android:gravity="center"
              android:text="중성화 함"
              android:textColor="@color/color_000000" />

          </com.github.florent37.shapeofview.shapes.RoundRectView>

          <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/pet_trans_no_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:shape_roundRect_borderColor="@color/color_EAE8E5"
            app:shape_roundRect_borderWidth="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:shape_roundRect_bottomLeftRadius="@dimen/dp_10"
            app:shape_roundRect_bottomRightRadius="@dimen/dp_10"
            app:shape_roundRect_topLeftRadius="@dimen/dp_10"
            app:shape_roundRect_topRightRadius="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_gravity="center"
              android:background="@color/clear"
              android:gravity="center"
              android:text="중성화 안함"
              android:textColor="@color/color_000000" />

          </com.github.florent37.shapeofview.shapes.RoundRectView>

          <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/trans_no_problem"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:shape_roundRect_borderColor="@color/color_EAE8E5"
            app:shape_roundRect_borderWidth="1dp"
            app:shape_roundRect_bottomLeftRadius="@dimen/dp_10"
            app:shape_roundRect_bottomRightRadius="@dimen/dp_10"
            android:layout_marginLeft="5dp"
            app:shape_roundRect_topLeftRadius="@dimen/dp_10"
            app:shape_roundRect_topRightRadius="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_gravity="center"
              android:background="@color/clear"
              android:gravity="center"
              android:text="상관없음"
              android:textColor="@color/color_000000" />

          </com.github.florent37.shapeofview.shapes.RoundRectView>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="30dp"
          android:orientation="horizontal">

          <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosansregular"
            android:text="성격"
            android:textColor="@color/color_000000"
            android:textSize="14dp" />

          <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosansregular"
            android:text="*"
            android:layout_marginLeft="4dp"
            android:textColor="@color/colorAccent"
            android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="20dp"
          android:orientation="horizontal">

          <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/pet_char1_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:shape_roundRect_borderColor="@color/color_EAE8E5"
            app:shape_roundRect_borderWidth="1dp"
            app:shape_roundRect_bottomLeftRadius="@dimen/dp_10"
            app:shape_roundRect_bottomRightRadius="@dimen/dp_10"
            app:shape_roundRect_topLeftRadius="@dimen/dp_10"
            app:shape_roundRect_topRightRadius="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_gravity="center"
              android:background="@color/clear"
              android:gravity="center"
              android:text="온순"
              android:textColor="@color/color_000000" />
          </com.github.florent37.shapeofview.shapes.RoundRectView>

          <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/pet_char2_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            app:shape_roundRect_borderColor="@color/color_EAE8E5"
            app:shape_roundRect_borderWidth="1dp"
            app:shape_roundRect_bottomLeftRadius="@dimen/dp_10"
            app:shape_roundRect_bottomRightRadius="@dimen/dp_10"
            app:shape_roundRect_topLeftRadius="@dimen/dp_10"
            app:shape_roundRect_topRightRadius="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_gravity="center"
              android:background="@color/clear"
              android:gravity="center"
              android:text="입질"
              android:textColor="@color/color_000000" />
          </com.github.florent37.shapeofview.shapes.RoundRectView>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="20dp"
          android:orientation="horizontal">

          <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/pet_char3_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:shape_roundRect_borderColor="@color/color_EAE8E5"
            app:shape_roundRect_borderWidth="1dp"
            app:shape_roundRect_bottomLeftRadius="@dimen/dp_10"
            app:shape_roundRect_bottomRightRadius="@dimen/dp_10"
            app:shape_roundRect_topLeftRadius="@dimen/dp_10"
            app:shape_roundRect_topRightRadius="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_gravity="center"
              android:background="@color/clear"
              android:gravity="center"
              android:text="호기심 많음"
              android:textColor="@color/color_000000" />
          </com.github.florent37.shapeofview.shapes.RoundRectView>

          <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/pet_char4_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            app:shape_roundRect_borderColor="@color/color_EAE8E5"
            app:shape_roundRect_borderWidth="1dp"
            app:shape_roundRect_bottomLeftRadius="@dimen/dp_10"
            app:shape_roundRect_bottomRightRadius="@dimen/dp_10"
            app:shape_roundRect_topLeftRadius="@dimen/dp_10"
            app:shape_roundRect_topRightRadius="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_gravity="center"
              android:background="@color/clear"
              android:gravity="center"
              android:text="활동적"
              android:textColor="@color/color_000000" />
          </com.github.florent37.shapeofview.shapes.RoundRectView>
        </LinearLayout>

        <com.github.florent37.shapeofview.shapes.RoundRectView
          android:id="@+id/pet_char5_button"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="@dimen/dp_10"
          android:layout_marginRight="20dp"
          app:shape_roundRect_borderColor="#EAE8E5"
          app:shape_roundRect_borderWidth="1dp"
          app:shape_roundRect_bottomLeftRadius="@dimen/dp_10"
          app:shape_roundRect_bottomRightRadius="@dimen/dp_10"
          app:shape_roundRect_topLeftRadius="@dimen/dp_10"
          app:shape_roundRect_topRightRadius="@dimen/dp_10">

          <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@color/clear"
            android:gravity="center"
            android:text="상관없음"
            android:textColor="@color/color_000000" />
        </com.github.florent37.shapeofview.shapes.RoundRectView>

      </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
      android:id="@+id/button_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="30dp"
      android:layout_marginRight="20dp"
      android:layout_marginBottom="40dp"
      android:layout_alignParentBottom="true">

      <com.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="75dp"
        android:layout_height="50dp"
        app:shape_roundRect_bottomLeftRadius="10dp"
        app:shape_roundRect_bottomRightRadius="@dimen/dp_10"
        app:shape_roundRect_topLeftRadius="@dimen/dp_10"
        app:shape_roundRect_topRightRadius="@dimen/dp_10">

        <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/walk_cancle_button"
          android:layout_width="75dp"
          android:layout_height="50dp"
          android:background="#CCCCCC"
          android:text="취소"
          android:textColor="@color/color_ffffff"
          android:textStyle="bold" />

      </com.github.florent37.shapeofview.shapes.RoundRectView>

      <com.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dp_10"
        app:shape_roundRect_bottomLeftRadius="10dp"
        app:shape_roundRect_bottomRightRadius="@dimen/dp_10"
        app:shape_roundRect_topLeftRadius="@dimen/dp_10"
        app:shape_roundRect_topRightRadius="@dimen/dp_10">

        <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/next_button"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@color/colorAccent"
          android:text="다음"
          android:textColor="@color/color_ffffff"
          android:textStyle="bold" />

      </com.github.florent37.shapeofview.shapes.RoundRectView>


    </LinearLayout>
  </RelativeLayout>


</LinearLayout>