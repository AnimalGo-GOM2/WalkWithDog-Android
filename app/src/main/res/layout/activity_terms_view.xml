<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical">

  <include layout="@layout/toolbar_back"/>


  <androidx.appcompat.widget.AppCompatTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="20dp"
    android:text="회원가입을 위해서"
    android:textColor="@color/color_000000"
    android:textSize="22dp"
    android:textStyle="bold" />

  <androidx.appcompat.widget.AppCompatTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="20dp"
    android:text="약관동의가 필요합니다."
    android:textColor="@color/color_000000"
    android:textSize="22dp"
    android:textStyle="bold" />



    <androidx.appcompat.widget.AppCompatCheckBox
      android:id="@+id/all_checkbox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="50dp"
      android:minHeight="0dp"
      android:buttonTint="@color/selector_checkbox"
      android:text="전체 동의"
      android:fontFamily="@font/notosansbold"
      android:textColor="@color/color_000000"
      android:textSize="14dp" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#EAE8E5"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"/>

 <RelativeLayout
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_marginTop="20dp"
   android:layout_marginLeft="20dp"
   android:layout_marginRight="20dp">

   <androidx.appcompat.widget.AppCompatCheckBox
     android:id="@+id/checkbox1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:buttonTint="@color/selector_checkbox"
     android:minHeight="0dp"
     android:text="(필수) 이용약관 동의"
     android:textColor="@color/color_000000"
     android:textSize="14dp" />

   <androidx.appcompat.widget.AppCompatImageView
     android:id="@+id/term_button1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentRight="true"
     android:layout_centerVertical="true"
     android:padding="@dimen/dp_10"
     android:src="@drawable/arrow_right" />

 </RelativeLayout>


  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <androidx.appcompat.widget.AppCompatCheckBox
      android:id="@+id/checkbox2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:minHeight="0dp"
      android:buttonTint="@color/selector_checkbox"
      android:text="(필수) 개인정보 취급방침 동의"
      android:textColor="@color/color_000000"
      android:textSize="14dp" />

    <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/term_button2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:padding="@dimen/dp_10"
      android:src="@drawable/arrow_right" />

  </RelativeLayout>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">
  <androidx.appcompat.widget.AppCompatCheckBox
    android:id="@+id/checkbox3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="0dp"
    android:buttonTint="@color/selector_checkbox"
    android:text="(필수) 위치서비스 이용약관 동의"
    android:textColor="@color/color_000000"
    android:textSize="14dp" />

    <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/term_button3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:padding="@dimen/dp_10"
      android:src="@drawable/arrow_right" />

  </RelativeLayout>

  <androidx.appcompat.widget.AppCompatCheckBox
    android:id="@+id/checkbox4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:minHeight="0dp"
    android:buttonTint="@color/selector_checkbox"
    android:text="마케팅 정보 활용 동의"
    android:textColor="@color/color_000000"
    android:textSize="14dp" />



  <com.github.florent37.shapeofview.shapes.RoundRectView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="170dp"
    android:layout_alignParentBottom="true"
    app:shape_roundRect_bottomLeftRadius="10dp"
    app:shape_roundRect_bottomRightRadius="10dp"
    app:shape_roundRect_topLeftRadius="10dp"
    app:shape_roundRect_topRightRadius="10dp">


    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/next_button"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignParentBottom="true"
      android:background="#28E0AB"
      android:gravity="center"
      android:text="다음"
      android:textColor="@color/color_ffffff"
      android:textSize="16dp"
      android:textStyle="bold" />

  </com.github.florent37.shapeofview.shapes.RoundRectView>






</LinearLayout>