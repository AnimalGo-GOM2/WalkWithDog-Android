<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
      android:id="@+id/scroll_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <RelativeLayout
            android:id="@+id/background_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
              android:id="@+id/profile_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="50dp"
              android:orientation="vertical">


              <com.github.florent37.shapeofview.shapes.RoundRectView
                android:id="@+id/my_profile_view"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_gravity="center_horizontal"
                app:shape_roundRect_bottomLeftRadius="54dp"
                app:shape_roundRect_bottomRightRadius="54dp"
                app:shape_roundRect_topLeftRadius="54dp"
                app:shape_roundRect_topRightRadius="54dp">

                <androidx.appcompat.widget.AppCompatImageView
                  android:id="@+id/mypage_user_image_view"
                  android:layout_width="108dp"
                  android:layout_height="108dp"
                  android:scaleType="centerCrop"
                  android:src="@drawable/alec_krum_iix_qqjkzae_unsplash" />

              </com.github.florent37.shapeofview.shapes.RoundRectView>

              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatTextView
                  android:id="@+id/member_nickname_text_view"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:text="시리우스누나"
                  android:textColor="@color/color_ffffff"
                  android:textSize="18dp"
                  android:textStyle="bold" />


                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dp_10"
                  android:orientation="horizontal">

                  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <androidx.appcompat.widget.AppCompatTextView
                      android:id="@+id/total_record_distant_text_view"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:text="1,600km"
                      android:textColor="@color/color_ffffff"
                      android:textSize="19dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="4dp"
                      android:text="산책거리"
                      android:textColor="#D1FFF2"
                      android:textSize="12dp" />
                  </LinearLayout>

                  <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="#D1FFF2" />



                  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <androidx.appcompat.widget.AppCompatTextView
                      android:id="@+id/total_record_cnt_text_view"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:text="240회"
                      android:textColor="@color/color_ffffff"
                      android:textSize="19dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="4dp"
                      android:text="산책 횟수"
                      android:textColor="#D1FFF2"
                      android:textSize="12dp" />
                  </LinearLayout>

                </LinearLayout>

              </LinearLayout>
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatImageView
              android:id="@+id/setting_button"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_marginTop="20dp"
              android:layout_marginRight="20dp"
              android:src="@drawable/head_btn_setting" />


          </RelativeLayout>

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="260dp"
            android:layout_marginRight="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/background_view">

            <com.github.florent37.shapeofview.shapes.RoundRectView
              android:layout_width="match_parent"
              android:layout_height="80dp"
              app:shape_roundRect_bottomLeftRadius="10dp"
              app:shape_roundRect_bottomRightRadius="10dp"
              app:shape_roundRect_topLeftRadius="10dp"
              app:shape_roundRect_topRightRadius="10dp">

              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                android:gravity="center"
                android:background="@color/color_f9f9f9"
                android:orientation="horizontal">

                <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_weight="1"
                  android:orientation="vertical">

                  <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:src="@drawable/i_star_on" />

                    <androidx.appcompat.widget.AppCompatTextView
                      android:id="@+id/walk_ready_star_text_view"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="4dp"
                      android:text="4.5"
                      android:textColor="@color/color_000000"
                      android:textSize="18dp"
                      android:textStyle="bold" />

                  </LinearLayout>

                  <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:text="산책 준비"
                    android:textColor="@color/color_000000"
                    android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="center_horizontal"
                  android:layout_weight="1"
                  android:orientation="vertical">

                  <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:src="@drawable/i_star_on" />

                    <androidx.appcompat.widget.AppCompatTextView
                      android:id="@+id/walk_text_view"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="4dp"
                      android:text="4.0"
                      android:textColor="@color/color_000000"
                      android:textSize="18dp"
                      android:textStyle="bold" />

                  </LinearLayout>

                  <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:text="산책 매너"
                    android:textColor="@color/color_000000"
                    android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_weight="1"
                  android:orientation="vertical">

                  <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:src="@drawable/i_star_on" />

                    <androidx.appcompat.widget.AppCompatTextView
                      android:id="@+id/time_star_text_view"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="4dp"
                      android:text="4.5"
                      android:textColor="@color/color_000000"
                      android:textSize="18dp"
                      android:textStyle="bold" />

                  </LinearLayout>

                  <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:text="시간 약속"
                    android:textColor="@color/color_000000"
                    android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_weight="1"
                  android:orientation="vertical">

                  <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:src="@drawable/i_star_on" />

                    <androidx.appcompat.widget.AppCompatTextView
                      android:id="@+id/friendly_text_view"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="4dp"
                      android:text="4.5"
                      android:textColor="@color/color_000000"
                      android:textSize="18dp"
                      android:textStyle="bold" />

                  </LinearLayout>

                  <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:text="사교성"
                    android:textColor="@color/color_000000"
                    android:textSize="12dp" />

                </LinearLayout>


              </LinearLayout>


            </com.github.florent37.shapeofview.shapes.RoundRectView>


          </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
          android:id="@+id/service_center_layout"
          android:layout_width="match_parent"
          android:layout_height="90dp"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginRight="20dp"
          android:orientation="vertical">

          <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="고객센터"
            android:textColor="@color/color_000000"
            android:textSize="16dp" />

          <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="궁금하신 사항과 새소식을 알려드립니다."
            android:textColor="@color/color_999999"
            android:textSize="14dp" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#EAE8E5" />

        </LinearLayout>

        <LinearLayout
          android:id="@+id/animalgo_info_layout"
          android:layout_width="match_parent"
          android:layout_height="90dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:orientation="vertical">

          <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="애니멀고 정보"
            android:textColor="@color/color_000000"
            android:textSize="16dp" />

          <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="회사에 대한 정보를 확인할 수 있습니다."
            android:textColor="@color/color_999999"
            android:textSize="14dp" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#EAE8E5" />

        </LinearLayout>

        <LinearLayout
          android:id="@+id/send_feedback_layout"
          android:layout_width="match_parent"
          android:layout_height="90dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:orientation="vertical">

          <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="애니멀고 산책 의견 보내기"
            android:textColor="@color/color_000000"
            android:textSize="16dp" />

          <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="애니멀고 산책, 어떻게 바꾸면 좋을까요?"
            android:textColor="@color/color_999999"
            android:textSize="14dp" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#EAE8E5" />

        </LinearLayout>

        <LinearLayout
          android:id="@+id/block_manage_button"
          android:layout_width="match_parent"
          android:layout_height="90dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:orientation="vertical">

          <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="차단 현황"
            android:textColor="@color/color_000000"
            android:textSize="16dp" />

          <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="차단한 친구를 확인하고 해제할 수 있습니다."
            android:textColor="@color/color_999999"
            android:textSize="14dp" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#EAE8E5" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/app_link_recycler_view"/>

        <LinearLayout
          android:id="@+id/account_management_layout"
          android:layout_width="match_parent"
          android:layout_height="90dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:orientation="vertical">

          <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="계정관리"
            android:textColor="@color/color_000000"
            android:textSize="16dp" />

        </LinearLayout>


      </LinearLayout>
    </androidx.core.widget.NestedScrollView>

  </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>