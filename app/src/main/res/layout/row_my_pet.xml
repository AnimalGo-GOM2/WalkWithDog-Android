<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="90dp"
  android:layout_height="90dp"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <com.github.florent37.shapeofview.shapes.RoundRectView
    android:layout_width="90dp"
    android:layout_height="90dp"
    app:shape_roundRect_borderColor="@color/color_ffffff"
    app:shape_roundRect_borderWidth="3dp"
    app:shape_roundRect_bottomLeftRadius="45dp"
    app:shape_roundRect_bottomRightRadius="45dp"
    app:shape_roundRect_topLeftRadius="45dp"
    app:shape_roundRect_topRightRadius="45dp">

    <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/my_pet_image_view"
      android:layout_width="90dp"
      android:scaleType="centerCrop"
      android:layout_height="90dp"
      android:src="@drawable/alec_krum_iix_qqjkzae_unsplash" />

  </com.github.florent37.shapeofview.shapes.RoundRectView>

</LinearLayout>