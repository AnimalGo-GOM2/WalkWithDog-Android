<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <androidx.appcompat.widget.AppCompatTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="30dp"
    android:fontFamily="@font/notosansbold"
    android:text="산책친구 지원"
    android:textColor="@color/color_000000"
    android:textSize="16dp" />

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="함께 산책 할 반려견을 선택하여 주세요."
      android:textColor="@color/color_000000"
      android:textSize="14dp" />

    <androidx.appcompat.widget.AppCompatTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="4dp"
      android:text="*"
      android:textColor="@color/colorAccent"
      android:textSize="14dp" />
  </LinearLayout>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/my_pet_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp" />

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="첫 대화 메세지를 남겨주세요."
      android:textColor="@color/color_000000"
      android:textSize="14dp" />

    <androidx.appcompat.widget.AppCompatTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="4dp"
      android:text="*"
      android:textColor="@color/colorAccent"
      android:textSize="14dp" />
  </LinearLayout>

  <androidx.appcompat.widget.AppCompatEditText
    android:id="@+id/apply_comment_edit_text"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:background="@color/clear"
    android:inputType="text"
    android:textSize="14dp" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/color_EAE8E5"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"/>

  <LinearLayout
    android:id="@+id/save_button_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp">

    <com.github.florent37.shapeofview.shapes.RoundRectView
      android:layout_width="75dp"
      android:layout_height="50dp"
      app:shape_roundRect_bottomLeftRadius="10dp"
      app:shape_roundRect_bottomRightRadius="@dimen/dp_10"
      app:shape_roundRect_topLeftRadius="@dimen/dp_10"
      app:shape_roundRect_topRightRadius="@dimen/dp_10">

      <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/apply_cancle_button"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:background="#CCCCCC"
        android:text="취소"
        android:textColor="@color/color_ffffff"
        android:textStyle="bold" />

    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <com.github.florent37.shapeofview.shapes.RoundRectView
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginLeft="@dimen/dp_10"
      app:shape_roundRect_bottomLeftRadius="10dp"
      app:shape_roundRect_bottomRightRadius="@dimen/dp_10"
      app:shape_roundRect_topLeftRadius="@dimen/dp_10"
      app:shape_roundRect_topRightRadius="@dimen/dp_10">

      <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/apply_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:text="지원하기"
        android:textColor="@color/color_ffffff"
        android:textStyle="bold" />

    </com.github.florent37.shapeofview.shapes.RoundRectView>


  </LinearLayout>


</LinearLayout>