<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal">


    <com.github.florent37.shapeofview.shapes.RoundRectView
      android:layout_width="44dp"
      android:layout_height="44dp"
      android:layout_gravity="center_vertical"
      app:shape_roundRect_bottomLeftRadius="14dp"
      app:shape_roundRect_bottomRightRadius="14dp"
      app:shape_roundRect_topLeftRadius="14dp"
      app:shape_roundRect_topRightRadius="14dp">

      <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/note_user_image_view"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="centerCrop"
        android:src="@drawable/alec_krum_iix_qqjkzae_unsplash" />

    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:orientation="vertical">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/user_name_text_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:text="구르미아빠"
          android:textColor="@color/color_000000"
          android:textSize="14dp"
          android:textStyle="bold" />


        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="4dp"
          android:layout_toEndOf="@+id/user_name_text_view"
          android:orientation="horizontal">

          <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/note_user_age_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20대"
            android:textColor="@color/color_999999"
            android:textSize="12dp" />

          <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="·"
            android:textColor="@color/color_999999"
            android:textSize="12dp" />

          <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/note_member_gender_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여성"
            android:textColor="@color/color_999999"
            android:textSize="12dp" />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/new_image_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:src="@drawable/i_new" />
      </RelativeLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/note_contents_text_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="14dp"
          android:text="안녕하세요. 우리 구르미와 아..."
          android:textColor="@color/color_999999"
          android:textSize="12dp" />

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/note_date_text_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginLeft="14dp"
          android:text="2021. 10. 26. 14:48"
          android:textColor="@color/color_999999"
          android:textSize="12dp" />

      </RelativeLayout>


    </LinearLayout>


  </LinearLayout>

</LinearLayout>