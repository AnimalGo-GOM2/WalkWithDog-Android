<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/cl_calendar_item"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@color/color_ffffff"
  android:orientation="vertical"
  android:padding="10dp">

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/tv_date_calendar_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:fontFamily="sans-serif-black"
    android:gravity="center"
    android:text="ì›”"
    android:textColor="@color/color_999999"
    android:textSize="14dp"
    app:fontFamily="@font/notosansregular" />

  <com.github.florent37.shapeofview.shapes.RoundRectView
    android:id="@+id/round_view"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginTop="20dp"
    app:shape_roundRect_borderColor="@color/colorAccent"
    app:shape_roundRect_borderWidth="1dp"
    app:shape_roundRect_bottomLeftRadius="20dp"
    app:shape_roundRect_bottomRightRadius="20dp"
    app:shape_roundRect_topLeftRadius="20dp"
    app:shape_roundRect_topRightRadius="20dp">

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_day_calendar_item"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:background="@color/color_28E0AB0A"
      android:fontFamily="sans-serif"
      android:gravity="center"
      android:text="11"
      android:textColor="@color/color_000000"
      android:textSize="16dp"
      app:fontFamily="@font/notosansregular" />

  </com.github.florent37.shapeofview.shapes.RoundRectView>

</LinearLayout>