<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal">

  <com.github.florent37.shapeofview.shapes.RoundRectView
    android:layout_width="84dp"
    android:layout_height="84dp"
    android:layout_marginLeft="20dp"
    app:shape_roundRect_bottomLeftRadius="42dp"
    app:shape_roundRect_bottomRightRadius="42dp"
    app:shape_roundRect_topLeftRadius="42dp"
    app:shape_roundRect_topRightRadius="42dp">

    <androidx.appcompat.widget.AppCompatImageView
      android:layout_width="84dp"
      android:layout_height="84dp"
      android:scaleType="centerCrop"
      android:src="@drawable/alec_krum_iix_qqjkzae_unsplash" />
  </com.github.florent37.shapeofview.shapes.RoundRectView>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="14dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="김아인슈타인코기 · 남아"
      android:textColor="@color/color_000000"
      android:textSize="14dp"
      android:textStyle="bold" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:orientation="horizontal">

      <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="견종"
        android:textColor="@color/color_999999"
        android:textSize="12dp" />

      <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="비글"
        android:textColor="@color/color_000000"
        android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="2dp"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="견종"
          android:textColor="@color/color_999999"
          android:textSize="12dp" />

        <androidx.appcompat.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:text="비글"
          android:textColor="@color/color_000000"
          android:textSize="12dp" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="성격"
          android:textColor="@color/color_999999"
          android:textSize="12dp" />

        <androidx.appcompat.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:text="활동적"
          android:textColor="@color/color_000000"
          android:textSize="12dp" />

      </LinearLayout>

    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="2dp"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="중성화"
          android:textColor="@color/color_999999"
          android:textSize="12dp" />

        <androidx.appcompat.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:text="O"
          android:textColor="@color/color_000000"
          android:textSize="12dp" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="훈련"
          android:textColor="@color/color_999999"
          android:textSize="12dp" />

        <androidx.appcompat.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:text="X"
          android:textColor="@color/color_000000"
          android:textSize="12dp" />

      </LinearLayout>

    </LinearLayout>

  </LinearLayout>
</LinearLayout>