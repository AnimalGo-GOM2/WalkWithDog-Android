<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.github.florent37.shapeofview.shapes.RoundRectView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    app:shape_roundRect_bottomLeftRadius="20dp"
    app:shape_roundRect_bottomRightRadius="20dp"
    app:shape_roundRect_topLeftRadius="20dp"
    app:shape_roundRect_topRightRadius="20dp">

    <LinearLayout
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:background="@color/color_ffffff"
      android:gravity="center"
      android:orientation="vertical">

      <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="회원탈퇴 사유"
        android:textColor="@color/color_000000"
        android:textSize="16dp" />

      <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/leave_reason_edit_text"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@color/clear"
        android:gravity="top"
        android:textSize="14dp"
        android:hint="탈퇴 사유를 적어 주세요."
        android:paddingTop="16dp" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_EAE8E5"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <com.github.florent37.shapeofview.shapes.RoundRectView
          android:layout_width="match_parent"
          android:layout_height="36dp"
          android:layout_marginTop="30dp"
          android:layout_weight="1"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="6dp"
          app:shape_roundRect_bottomLeftRadius="10dp"
          app:shape_roundRect_bottomRightRadius="10dp"
          app:shape_roundRect_topLeftRadius="10dp"
          app:shape_roundRect_topRightRadius="10dp">

          <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/withdrawal_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/color_CCCCCC"
            android:text="취소"
            android:textColor="@color/color_ffffff"
            android:textSize="14dp" />

        </com.github.florent37.shapeofview.shapes.RoundRectView>

        <com.github.florent37.shapeofview.shapes.RoundRectView
          android:layout_width="match_parent"
          android:layout_height="36dp"
          android:layout_marginTop="30dp"
          android:layout_weight="1"
          android:layout_marginRight="30dp"
          android:layout_marginLeft="6dp"
          app:shape_roundRect_bottomLeftRadius="10dp"
          app:shape_roundRect_bottomRightRadius="10dp"
          app:shape_roundRect_topLeftRadius="10dp"
          app:shape_roundRect_topRightRadius="10dp">

          <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/withdrawal_button"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#28E0AB"
            android:gravity="center"
            android:text="회원탈퇴"
            android:textColor="@color/color_ffffff"
            android:textSize="14dp" />

        </com.github.florent37.shapeofview.shapes.RoundRectView>
      </LinearLayout>

    </LinearLayout>
  </com.github.florent37.shapeofview.shapes.RoundRectView>

</RelativeLayout>